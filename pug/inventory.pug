doctype html
html(lang="en")
    head 
        include components/_head
    body 
        aside.float-start#menuAdmin
            include components/_menu

        main.float-end.py-5#mainAdmin
            .container
                h4 Lista de Productos

                .shadow-sm.d-flex.my-4.p-4.justify-content-between.rounded
                    form.d-none.d-lg-flex.me-2
                        input.form-control.me-2(type="search" placeholder="Buscar...")
                        button.btn.btn-secondary(type="submit")
                            i.fa-solid.fa-magnifying-glass

                    div 
                        button.btn.btn-outline-danger
                            i.fa-solid.fa-trash

                        button.btn.btn-primary
                            i.fa-solid.fa-plus 
                            | Agregar Producto        

                .table-responsive.shadow-sm.p-4.rounded
                    table.table
                        thead.bg-light
                            tr
                                th.text-gray: b Código
                                th.text-gray: b Producto
                                th.text-gray: b Precio
                                th.text-gray: b Stock
                                th.text-gray: b Categoría
                                th.text-gray: b Estatus
                                th.text-gray: b Acciones

                        tbody
                            tr
                                td AA1232
                                td 
                                    .d-flex.align-items-center
                                        img(src="img/gaseosa.png" alt="Producto" height="75")
                                        b Coca Cola
                                td S/. 12.90
                                td 4000
                                td Bebidas
                                td 
                                    div.dropdown
                                        button.btn.btn-outline-secondary.dropdown-toggle(type="button", data-bs-toggle="dropdown")
                                            span.status-dot.green 
                                            span.selected-status Entregado
                                        ul.dropdown-menu
                                            li 
                                                a.dropdown-item(href="#", data-value="entregado", data-color="green")
                                                    span.status-dot.green 
                                                    | Activo
                                            li 
                                                a.dropdown-item(href="#", data-value="pendiente", data-color="orange")
                                                    span.status-dot.orange 
                                                    | Inactivo
                                            li 
                                                a.dropdown-item(href="#", data-value="cancelado", data-color="red")
                                                    span.status-dot.red 
                                                    | Sin Stock
                                td 
                                    button.btn.btn-sm.btn-primary 
                                        i.fa-solid.fa-edit.me-2
                                        | Editar                       
                                    button.btn.btn-sm.btn-danger 
                                        i.fa-solid.fa-trash

            

        script(src="https://kit.fontawesome.com/1822c1a120.js") 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js") 
        script(src="js/main.js") 
            